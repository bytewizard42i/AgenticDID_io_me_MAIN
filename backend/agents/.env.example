# ============================================================================
# AGENTS RUNTIME - ENVIRONMENT VARIABLES
# ============================================================================
#
# Copy this file to .env and fill in your values
# NEVER commit .env files with real API keys!
#
# ============================================================================

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Claude API Configuration (REQUIRED)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Claude Model Settings
CLAUDE_MODEL=claude-opus-4-20250514
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=1.0
CLAUDE_EXTENDED_THINKING=true

# Google ADK Configuration
ADK_ENABLED=true
GOOGLE_CLOUD_PROJECT=your-project-id
ADK_REGION=us-central1

# TTS Service Integration (Listen In Mode)
TTS_ENABLED=true
TTS_SERVICE_URL=http://localhost:3003
TTS_TIMEOUT=15000

# Agent Execution Settings
AGENT_TIMEOUT=60000
MAX_CONCURRENT_AGENTS=10
AGENT_RETRY_ATTEMPTS=2

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true
