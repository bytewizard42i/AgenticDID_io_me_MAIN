# Midnight Gateway Configuration
# Copy to .env and fill in your values

# Server Configuration
PORT=3003
HOST=0.0.0.0
LOG_LEVEL=info

# Deployment Mode
# Options: UNDEPLOYED (local), DEVNET, TESTNET, MAINNET
DEPLOYMENT_MODE=UNDEPLOYED

# Midnight Network Configuration
NETWORK_ID=undeployed

# Proof Server (local or remote)
PROOF_SERVER_URL=http://localhost:6300
PROOF_SERVER_TIMEOUT=30000

# Indexer (devnet/testnet/mainnet only)
INDEXER_URL=https://indexer-devnet.midnight.network
INDEXER_TIMEOUT=10000

# Node RPC (devnet/testnet/mainnet only)
NODE_URL=https://rpc-devnet.midnight.network
NODE_TIMEOUT=10000

# Contracts Path (compiled contracts)
CONTRACTS_PATH=../../protocol/compiled

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001

# Verifier Configuration
VERIFIER_STRICT_MODE=true
VERIFIER_ENABLE_FRAUD_DETECTION=true
VERIFIER_BLOCK_BRAND_IMPERSONATION=true
VERIFIER_ENFORCE_CREDENTIAL_POLICIES=true
VERIFIER_CACHE_TTL_SECONDS=60

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY_MS=1000
RETRY_MAX_DELAY_MS=10000
RETRY_BACKOFF_FACTOR=2

# Performance
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=10000
