# AgenticDID Environment Configuration
# Copy this to .env and fill in your values

# ==================== REQUIRED ====================

# Anthropic Claude API (for agent reasoning)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Midnight Network RPC
MIDNIGHT_RPC_URL=https://testnet.midnight.network
MIDNIGHT_CHAIN_ID=midnight-testnet-1

# Google Cloud (for TTS and ADK)
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project"...}
GOOGLE_PROJECT_ID=your-gcp-project-id

# ==================== OPTIONAL ====================

# Agent Configuration
ENABLE_LISTEN_IN_MODE=true
DEFAULT_AGENT_MODEL=claude-opus-4-20250514
AGENT_THINKING_BUDGET=10000

# TTS Configuration
TTS_PROVIDER=google
TTS_VOICE_NAME=en-US-Neural2-J
TTS_LANGUAGE_CODE=en-US

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_PROD=https://agenticdid.vercel.app

# Backend Service URLs (microservices)
API_GATEWAY_URL=http://localhost:8787
AGENTS_RUNTIME_URL=http://localhost:3000
MIDNIGHT_GATEWAY_URL=http://localhost:3001
TTS_SERVICE_URL=http://localhost:3002

# Deployment (Production URLs)
PROD_API_URL=https://agenticdid-api.onrender.com
PROD_AGENTS_URL=https://agenticdid-agents.onrender.com
PROD_MIDNIGHT_URL=https://agenticdid-midnight.onrender.com

# Database (if needed later)
DATABASE_URL=postgresql://localhost:5432/agenticdid
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-key-change-this
API_RATE_LIMIT=100
CORS_ORIGINS=http://localhost:5173,https://agenticdid.vercel.app

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Feature Flags
ENABLE_SPOOF_TRANSACTIONS=true
SPOOF_TRANSACTION_RATIO=0.8
ENABLE_BIOMETRIC_AUTH=false
ENABLE_QR_VERIFICATION=false

# Phase 2 Features (Coming Soon)
ENABLE_HUMAN_DIDS=false
ENABLE_HEALTHCARE_AGENTS=false
ENABLE_NIGHTAGENT=false
